# PawCode Environment Variables
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=3000
BASE_URL=https://your-pawcode-domain.com

# Email Configuration (Gmail SMTP)
EMAIL_USER=your-pawcode-email@gmail.com
EMAIL_PASS=your-app-specific-password

# SMS Configuration (Twilio)
TWILIO_SID=your-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token
TWILIO_PHONE=+1234567890

# Alternative SMS Services (uncomment if using)
# For Lebanese SMS providers:
# SMS_PROVIDER=ogero
# SMS_API_KEY=your-api-key
# SMS_SENDER_ID=PawCode

# Database (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/pawcode
# or
# MONGODB_URI=mongodb://localhost:27017/pawcode

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY_SECRET=your-api-key-for-webhook-security

# Optional: Google Analytics, Facebook Pixel, etc.
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX